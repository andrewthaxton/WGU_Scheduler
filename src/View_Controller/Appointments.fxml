<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="482.0" prefWidth="719.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View_Controller.AppointmentsController">
   <children>
      <Label fx:id="appointmentsTitleLabel" layoutX="312.0" layoutY="23.0" text="Appointments">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TableView fx:id="appointmentsTableview" layoutX="20.0" layoutY="100.0" prefHeight="297.0" prefWidth="688.0">
        <columns>
          <TableColumn fx:id="aptIdCol" prefWidth="75.0" text="Apt. ID" />
          <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
            <TableColumn fx:id="descriptionCol" prefWidth="85.0" text="Description" />
            <TableColumn fx:id="locationCol" prefWidth="75.0" text="Location" />
            <TableColumn fx:id="contactCol" prefWidth="75.0" text="Contact" />
            <TableColumn fx:id="typeCol" prefWidth="75.0" text="Type" />
            <TableColumn fx:id="startCol" prefWidth="75.0" text="Start" />
            <TableColumn fx:id="endCol" prefWidth="75.0" text="End" />
            <TableColumn fx:id="customerIdCol" prefWidth="75.0" text="Customer ID" />
        </columns>
      </TableView>
      <RadioButton fx:id="allRadio" layoutX="77.0" layoutY="69.0" mnemonicParsing="false" onAction="#onAllRadio" selected="true" text="All">
         <toggleGroup>
            <ToggleGroup fx:id="appointmentGroupToggle" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="monthRadio" layoutX="331.0" layoutY="69.0" mnemonicParsing="false" onAction="#onMonthRadio" text="Month" toggleGroup="$appointmentGroupToggle" />
      <RadioButton fx:id="weekRadio" layoutX="599.0" layoutY="69.0" mnemonicParsing="false" onAction="#onWeekRadio" text="Week" toggleGroup="$appointmentGroupToggle" />
      <Button fx:id="addAppointmentButton" layoutX="94.0" layoutY="433.0" mnemonicParsing="false" onAction="#onAddAppointmentButton" text="Add" />
      <Button fx:id="updateAppointmentButton" layoutX="230.0" layoutY="433.0" mnemonicParsing="false" onAction="#onUpdateAppointmentButton" text="Update" />
      <Button fx:id="deleteAppointmentButton" layoutX="367.0" layoutY="433.0" mnemonicParsing="false" onAction="#onDeleteAppointmentButton" text="Delete" />
      <Button fx:id="homeButton" layoutX="650.0" layoutY="433.0" mnemonicParsing="false" onAction="#onHomeButton" text="Home" />
      <Button fx:id="previousButton" layoutX="20.0" layoutY="397.0" mnemonicParsing="false" onAction="#onPreviousButton" text="Previous" />
      <Button fx:id="nextButton" layoutX="667.0" layoutY="397.0" mnemonicParsing="false" onAction="#onNextButton" text="Next" />
   </children>
</AnchorPane>
