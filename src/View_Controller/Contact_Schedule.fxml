<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View_Controller.Contact_ScheduleController">
   <children>
      <Label fx:id="contactScheduleTitleLabel" layoutX="243.0" layoutY="25.0" text="Contact Schedule">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ComboBox fx:id="contactCombo" layoutX="225.0" layoutY="64.0" onAction="#onContactCombo" prefWidth="150.0" promptText="Select Contact" />
      <TableView fx:id="contactScheduleTableview" layoutX="18.0" layoutY="108.0" prefHeight="224.0" prefWidth="568.0">
        <columns>
          <TableColumn fx:id="aptIdCol" prefWidth="75.0" text="Apt. ID" />
          <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
            <TableColumn fx:id="typeCol" prefWidth="75.0" text="Type" />
            <TableColumn fx:id="descriptionCol" prefWidth="85.0" text="Description" />
            <TableColumn fx:id="startCol" prefWidth="90.0" text="Start" />
            <TableColumn fx:id="endCol" prefWidth="90.0" text="End" />
            <TableColumn fx:id="customerIdCol" prefWidth="75.0" text="Customer ID" />
        </columns>
      </TableView>
      <Button fx:id="exitButton" layoutX="274.0" layoutY="351.0" mnemonicParsing="false" onAction="#onExitButton" text="Exit" />
   </children>
</AnchorPane>
